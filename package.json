{
    "name": "wiz-lang",
    "displayName": "Wiz Language Support",
    "description": "Syntax highlighting for the Wiz Language",
    "version": "0.1.2",
    "publisher": "danl2620",
    "repository": "https://github.com/Danl2620/wiz-lang-ext",
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "wiz",
                "aliases": [
                    "wiz",
                    "wiz"
                ],
                "extensions": [
                    "wiz"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "wiz",
                "scopeName": "source.wiz",
                "path": "./syntaxes/wiz.tmLanguage"
            }
        ],
        "problemMatcher": {
            "owner": "wiz",
            "fileLocation": ["absolute"],
            "pattern": [{
                "regexp": "^(.*?):(\\d*):\\s+(error|note):\\s+(.*)$",
                "file": 1,
                "line": 2,
                "severity": 3,
                "message": 4
            }]
        }
    }
}
